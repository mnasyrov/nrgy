{
  "name": "nrgy",
  "version": "0.0.10",
  "description": "Reactive state and effect management",
  "license": "MIT",
  "author": "Mikhail Nasyrov (https://github.com/mnasyrov)",
  "homepage": "https://github.com/mnasyrov/nrgy",
  "bugs": "https://github.com/mnasyrov/nrgy/issues",
  "repository": "github:mnasyrov/nrgy",
  "type": "module",
  "main": "dist/core.cjs",
  "module": "dist/core.js",
  "types": "dist/core.d.ts",
  "files": [
    "dist",
    "docs",
    "src",
    "index.ts",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "require": "./dist/core.cjs",
      "default": "./dist/core.js"
    },
    "./mvc": {
      "require": "./dist/mvc.cjs",
      "default": "./dist/mvc.js"
    },
    "./store": {
      "require": "./dist/store.cjs",
      "default": "./dist/store.js"
    },
    "./ditox": {
      "require": "./dist/ditox.cjs",
      "default": "./dist/ditox.js"
    },
    "./ditox-react": {
      "require": "./dist/ditox-react.cjs",
      "default": "./dist/ditox-react.js"
    },
    "./react": {
      "require": "./dist/react.cjs",
      "default": "./dist/react.js"
    },
    "./rx-effects": {
      "require": "./dist/rx-effects.cjs",
      "default": "./dist/rx-effects.js"
    },
    "./rxjs": {
      "require": "./dist/rxjs.cjs",
      "default": "./dist/rxjs.js"
    },
    "./rxjs-react": {
      "require": "./dist/rxjs-react.cjs",
      "default": "./dist/rxjs-react.js"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf build coverage dist",
    "lint": "npm run eslint && npm run tsc",
    "eslint": "eslint --cache --max-warnings 0 \"src/**\"",
    "eslint-fix": "npm run eslint -- --fix",
    "tsc": "tsc --noEmit --jsx react-jsx",
    "test": "jest",
    "build": "tsup",
    "benchmarks": "npm run build -- --silent && tsx ./benchmarks",
    "pack": "npm run build && mkdir -p dist && npm pack --pack-destination ./dist",
    "preversion": "npm run lint && npm run test && npm run build && git add --all",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postversion": "npm run changelog && git add .",
    "prepublishOnly": "test -d dist || (echo 'Error: dist is missing!' && exit 1)"
  },
  "optionalDependencies": {
    "ditox": ">=2.2",
    "ditox-react": ">=2.2",
    "react": ">=17 || >=18",
    "rx-effects": ">=1.0",
    "rxjs": ">=7.0"
  },
  "devDependencies": {
    "@testing-library/react": "14.1.2",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "conventional-changelog-cli": "4.1.0",
    "ditox": "2.4.1",
    "ditox-react": "2.4.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.0",
    "nrgy-reference": "npm:nrgy@0.0.3",
    "prettier": "3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rx-effects": "1.1.1",
    "rxjs": "7.8.1",
    "tinybench": "2.5.1",
    "ts-jest": "29.1.1",
    "tsup": "8.0.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "attributions": [
    {
      "energy.svg": [
        "UXWing, https://uxwing.com/license",
        "https://uxwing.com/wp-content/themes/uxwing/download/computers-mobile-hardware/energy-icon.svg"
      ]
    }
  ],
  "keywords": [
    "state",
    "effect",
    "management",
    "reactive",
    "rxjs"
  ]
}
